# AI Article Generator - Environment Configuration
# Copy this file to .env and fill in your API keys

# OpenAI API Configuration
OPENAI_API_KEY=sk-your-openai-api-key-here

# SeeDream API Configuration (BytePlus)
ARK_API_KEY=your-ark-api-key-here

# Nano Banana API Configuration  
NANO_BANANA_KEY=nbn-your-nano-banana-api-key-here

# Optional: OpenAI Organization ID
# OPENAI_ORG_ID=org-your-organization-id-here

# App Configuration
APP_TITLE=AI Article Generator
APP_DESCRIPTION=Professional AI-powered content creation with stunning visuals
MAX_TOKENS=4000
TEMPERATURE=0.7

# Image Generation Settings - OpenAI DALL-E
DALLE_MODEL=dall-e-3
DALLE_SIZE=1024x1024
DALLE_QUALITY=standard

# Image Generation Settings - SeeDream
SEEDREAM_MODEL=seedream-4-0-250828
SEEDREAM_SIZE=2K

# General Image Settings
MAX_IMAGES_PER_ARTICLE=5

# Performance Settings
CACHE_TTL_MINUTES=60
MAX_CONCURRENT_REQUESTS=3